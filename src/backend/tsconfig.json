{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "../../build/backend/",
        "baseUrl": ".",
        "lib": [
          "esnext",
          "dom",
          "dom.iterable",
          "scripthost"
        ],
        "paths": {
            "@shared": [
                "../shared"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}